<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    >
    <TextView 
    	android:id="@+id/txt_nafn"
    	android:layout_marginTop="1px" 
    	android:textSize="18px" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text="Nafn atburðar:" 
    	android:layout_gravity="center_horizontal" >
    </TextView>
    <EditText 
    	android:id="@+id/edi_nafn"
    	android:layout_below="@+id/txt_nafn"
    	android:layout_centerHorizontal="true"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_marginTop="1px">
    </EditText>
    <TextView 
    	android:id="@+id/txt_lysing"
    	android:layout_marginTop="1px" 
    	android:textSize="18px" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text="Lýsing atburðar:" >
    </TextView>
    <EditText 
    	android:id="@+id/edi_lysing"
    	android:layout_below="@+id/txt_nafn"
    	android:layout_centerHorizontal="true"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_marginTop="1px">
    </EditText>
    <Button 
    	android:id="@+id/btn_dagsetning"
    	android:layout_marginTop="1px" 
    	android:textSize="18px" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text="Dagsetning"
    	android:onClick="fDag" >
    </Button>
    <Button 
    	android:id="@+id/btn_upphafstimi"
    	android:layout_marginTop="1px" 
    	android:textSize="18px" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text="Upphafstími" 
    	android:onClick="fUpphaf">
    </Button>
    <Button 
    	android:id="@+id/btn_lokatimi"
    	android:layout_marginTop="1px" 
    	android:textSize="18px" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text="Lokatími" 
    	android:onClick="fLoka">
    </Button>
    <Button 
    	android:id="@+id/btn_stadsetning"
    	android:layout_marginTop="1px" 
    	android:textSize="18px" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text="Staðsetning" 
    	android:onClick="fStads">
    </Button>
    <Button 
    	android:id="@+id/btn_ferdamati"
    	android:layout_marginTop="1px" 
    	android:textSize="18px" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text="Ferðamáti"
    	android:onClick="fFerda" >
    </Button>
    <Button 
    	android:id="@+id/btn_senda"
    	android:layout_marginTop="1px" 
    	android:textSize="18px" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text="Skrá atburð" 
    	android:onClick="fSkra">
    </Button>

</LinearLayout>